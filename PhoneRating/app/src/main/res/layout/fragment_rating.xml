<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phone Name"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edittext_name"
            app:layout_constraintBottom_toBottomOf="@+id/edittext_name"
            app:layout_constraintRight_toLeftOf="@+id/edittext_name" />

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text='Samsung Note 10'
            android:layout_margin="8dp"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/text_name"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btn_excellent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/edittext_name"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btn_very_good"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Very Good"
            app:layout_constraintTop_toBottomOf="@id/btn_excellent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btn_good"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Good"
            app:layout_constraintTop_toBottomOf="@id/btn_very_good"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btn_poor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Poor"
            app:layout_constraintTop_toBottomOf="@id/btn_good"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btn_very_poor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Very Poor"
            app:layout_constraintTop_toBottomOf="@id/btn_poor"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/btn_5"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/star_pattern"
            app:layout_constraintTop_toTopOf="@id/btn_excellent"
            app:layout_constraintBottom_toBottomOf="@id/btn_excellent"
            app:layout_constraintLeft_toRightOf="@id/btn_excellent"/>

        <ImageView
            android:id="@+id/btn_4"
            android:layout_width="96dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/star_pattern"
            app:layout_constraintTop_toTopOf="@id/btn_very_good"
            app:layout_constraintBottom_toBottomOf="@id/btn_very_good"
            app:layout_constraintLeft_toRightOf="@id/btn_very_good"/>

        <ImageView
            android:id="@+id/btn_3"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/star_pattern"
            app:layout_constraintTop_toTopOf="@id/btn_good"
            app:layout_constraintBottom_toBottomOf="@id/btn_good"
            app:layout_constraintLeft_toRightOf="@id/btn_good"/>

        <ImageView
            android:id="@+id/btn_2"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/star_pattern"
            app:layout_constraintTop_toTopOf="@id/btn_poor"
            app:layout_constraintBottom_toBottomOf="@id/btn_poor"
            app:layout_constraintLeft_toRightOf="@id/btn_poor"/>

        <ImageView
            android:id="@+id/btn_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:background="@drawable/star_pattern"
            app:layout_constraintTop_toTopOf="@id/btn_very_poor"
            app:layout_constraintBottom_toBottomOf="@id/btn_very_poor"
            app:layout_constraintLeft_toRightOf="@id/btn_very_poor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
